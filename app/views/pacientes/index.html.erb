<p id="notice"><%= notice %></p>


<div class="container">
  <h2 style="display: inline-block; ">Pacientes</h2>
  <%= link_to 'Novo Paciente', new_paciente_registration_path,class:"m-3 btn btn-primary" %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Data nascimento</th>
      <th>Cpf</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.id %></td>
        <td><%= paciente.nome %></td>
        <td><%= paciente.data_nascimento %></td>
        <td><%= paciente.cpf %></td>
        <td><%= paciente.email %></td>
        <td><%= link_to  "Exibir", "/pacientes/#{paciente.id}",class:"btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


