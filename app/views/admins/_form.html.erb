<%= form_with(model: admin) do |form| %>
  <% if admin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
        <% admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome,class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email ,class:"form-control"%>
  </div>

  <div class="form-group row">
    <%= form.label "Senha" %>
    <%= form.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label "Confirmar senha" %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div >
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
